# OpenAI API Key (required)
OPENAI_API_KEY=your-openai-api-key-here

# Neo4j Connection (required for compatibility checking)
# For local Neo4j:
NEO4J_URI=bolt://localhost:7687
# For Neo4j Aura (cloud):
# NEO4J_URI=neo4j+s://<instance-id>.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# RapidAPI Key (optional, only needed for populating database via dataset builder)
RAPIDAPI_KEY=your-rapidapi-key-here
RAPIDAPI_HOST=product-search-api.p.rapidapi.com
RAPIDAPI_BASE_URL=https://product-search-api.p.rapidapi.com
RAPIDAPI_SEARCH_ENDPOINT=/shopping
RAPIDAPI_PRODUCT_ENDPOINT=/products/{product_id}

# Tavily API Key (optional, for analytical agent web search)
TAVILY_API_KEY=your-tavily-api-key-here

# Backend API URL (for frontend)
IDSS_API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# PC Parts Database Path (optional, defaults to data/pc_parts.db)
PC_PARTS_DB=data/pc_parts.db

# Optional: Auto.dev API Key (legacy, not currently used for PC parts)
AUTODEV_API_KEY=your-autodev-api-key-here
